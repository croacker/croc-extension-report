{
    "manifest_version": 2,
    
    "name": "Demo Browser Extension",
    "version": "0.0.1",

    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },

    "browser_action": {
        "default_title": "Demo Browser Extension",
        "default_icon": "icons/icon48.png"
    },
    
    "background": {
        "scripts": [
          "background.js"
        ],
        "persistent": true
      },
    
    "permissions": [
        "https://*/*",
        "http://*/*",
        "http://127.0.0.1:8082/*",
        "file:///*",
        "tabs",
        "nativeMessaging"
    ]
}